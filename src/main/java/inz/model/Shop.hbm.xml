<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "hhtp://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "inz.model.Shop" table = "shop">
        <meta attribute = "class-description">
            This class contains shops details
        </meta>

        <id name = "shopId" type = "big_integer" column = "shopid">
            <generator class = "native" />
        </id>

        <property name = "name" type = "string">
            <column name = "name" not-null = "true" />
        </property>

        <property name = "localization" type = "string">
            <column name = "localization" not-null = "true" />
        </property>

        <property name = "street" type = "string">
            <column name = "street" not-null = "true" />
        </property>

        <property name = "number" type = "string">
            <column name = "number" not-null = "true" />
        </property>

        <property name = "country" type = "string">
            <column name = "country" not-null = "true" />
        </property>

        <property name = "city" type = "string">
            <column name = "city" not-null = "true" />
        </property>

        <property name = "telnumber" type = "string">
            <column name = "telnumber" not-null = "true" />
        </property>

        <property name = "site" type = "string">
            <column name = "sity" not-null = "false" />
        </property>
    </class>
</hibernate-mapping>
