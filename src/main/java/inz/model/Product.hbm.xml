<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "hhtp://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "inz.model.Product" table = "product">
        <meta attribute = "class-description">
            This class contains products details
        </meta>

        <id name = "productId" type = "big_integer" column = "productid">
            <generator class = "native" />
        </id>

        <property name = "categoryId" type = "big_integer">
            <column name = "categoryid" not-null = "true" />
        </property>

        <property name = "shopId" type = "big_integer">
            <column name = "shopid" not-null = "true" />
        </property>

        <property name = "name" type = "string">
            <column name = "name" not-null = "true" />
        </property>

        <property name = "description" type = "string">
            <column name = "description" not-null = "true" />
        </property>

        <property name = "price" type = "double">
            <column name = "price" not-null = "true" />
        </property>

        <property name = "currency" type = "string">
            <column name = "currency" not-null = "true" />
        </property>

        <property name = "promotion" type = "string">
            <column name = "promotion" not-null = "false" />
        </property>

        <property name = "link" type = "string">
            <column name = "link" not-null = "false" />
        </property>
    </class>
</hibernate-mapping>
